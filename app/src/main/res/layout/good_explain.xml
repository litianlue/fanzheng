<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="763dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/good_img"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:src="@mipmap/girl" />

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/good_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="妹子很靓"
                android:textColor="@color/c333"
                android:textSize="@dimen/text_size_30" />

            <TextView
                android:id="@+id/good_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:lines="1"
                android:text="36.00"
                android:textColor="@color/ff36"
                android:textSize="@dimen/text_size_30" />

            <TextView
                android:id="@+id/repertory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:lines="1"
                android:text="库存数量"
                android:textColor="@color/c999"
                android:textSize="@dimen/text_size_24" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/close"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:src="@mipmap/close_black" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/spectitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="颜色"
        android:textColor="@color/c666"
        android:textSize="@dimen/text_size_28" />

    <com.chexiang.external.FlowLayout
        android:id="@+id/fll_spec_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp">

    </com.chexiang.external.FlowLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:text="数量"
        android:textColor="@color/c666"
        android:textSize="@dimen/text_size_28" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/iv_remove"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/r5_frame_gray_bg"
            android:padding="20dp"
            android:src="@mipmap/goods_remove" />

        <EditText
            android:id="@+id/et_num"
            android:layout_width="183dp"
            android:layout_height="66dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/r5_frame_gray_bg"
            android:digits="1234567890"
            android:enabled="false"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="28dp" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginLeft="286dp"
            android:background="@drawable/r5_frame_gray_bg"
            android:padding="10dp"
            android:src="@mipmap/goods_add" />
    </FrameLayout>

    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/affirm"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/g05ca"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_34" />
    </LinearLayout>


</LinearLayout>