<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/orderstate_already"/>
        <TextView
            android:id="@+id/tv_order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单状态：待收货"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:layout_toRightOf="@+id/iv_img"
            android:textColor="@color/g05ca"/>
        <TextView
            android:id="@+id/tv_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_state"
            android:layout_marginTop="15dp"
            android:text="订单号：051616151616151551"
            android:textSize="26dp"
            android:layout_toRightOf="@+id/iv_img"
            android:textColor="@color/c666"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="130dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_state"
            android:text="联系方式：李生  134282182033"
            android:textSize="26dp"
            android:textColor="@color/c666"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_state"
            android:layout_marginTop="15dp"
            android:text="取货地址：广州绿地中心广州绿地中心"
            android:textSize="26dp"
            android:textColor="@color/c666"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="30dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/girl"/>
        <TextView
            android:id="@+id/iv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="订单号订单号订单号订单号订单号"
            android:singleLine="true"
            android:textSize="26dp"
            android:layout_toRightOf="@+id/iv_product_image"
            android:textColor="@color/c333"/>
        <TextView
            android:id="@+id/iv_product_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="待发货"
            android:singleLine="true"
            android:textSize="26dp"
            android:layout_toRightOf="@+id/iv_product_image"
            android:layout_below="@+id/iv_product_name"
            android:textColor="@color/g05ca"/>
        <TextView
            android:id="@+id/iv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="40"
            android:singleLine="true"
            android:textSize="26dp"
            android:layout_toRightOf="@+id/iv_product_image"
            android:layout_below="@+id/iv_product_state"
            android:textColor="@color/c333"/>
        <TextView
            android:id="@+id/iv_product_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="x1"
            android:singleLine="true"
            android:textSize="26dp"
            android:layout_toRightOf="@+id/iv_product_price"
            android:layout_below="@+id/iv_product_state"
            android:textColor="@color/c999"/>
        <Button
            android:layout_width="140dp"
            android:layout_height="58dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="70dp"
            android:textColor="@color/g05ca"
            android:textSize="26dp"
            android:background="@drawable/ellipse_g"
            android:text="订单跟踪"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:padding="30dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品总额"
            android:textSize="26dp"
            android:textColor="@color/c333"/>
        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40"
            android:textSize="26dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/c666"/>
        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_total"
            android:layout_marginTop="20dp"
            android:text="下单时间"
            android:textSize="26dp"
            android:textColor="@color/c333"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_total_price"
            android:layout_marginTop="20dp"
            android:text="2018-10-10"
            android:textSize="26dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/c666"/>
        <TextView
            android:id="@+id/tv_actual_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_time"
            android:layout_marginTop="40dp"
            android:text="实际金额"
            android:textSize="26dp"
            android:textColor="@color/c333"/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time"
            android:layout_marginTop="40dp"
            android:text="10"
            android:textSize="26dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/ff36"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:textColor="@color/c666"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_24"
            android:text="如有疑问，请联系团长"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textColor="@color/g05ca"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_30"
            android:text="134288265546"/>

    </LinearLayout>
    <Button
        android:id="@+id/gold_card_send"
        android:layout_width="560dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:background="@mipmap/saveinfo"
        android:layout_gravity="center_horizontal"
        android:text="回首页看看"
        android:textSize="34dp"
        android:textColor="@color/white"/>

</LinearLayout>
