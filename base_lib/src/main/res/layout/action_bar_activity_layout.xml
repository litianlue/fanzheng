<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_load_err" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="网络出问题啦"
            android:textColor="#8e9fa5"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="点击屏幕,重新加载"
            android:textColor="#8e9fa5" />
    </LinearLayout>
   <FrameLayout
       android:id="@+id/title_back"
       android:layout_width="match_parent"
       android:visibility="gone"
       android:background="@color/g05ca"
       android:layout_height="80dp">
       <FrameLayout
           android:id="@+id/base_title_back"
           android:layout_width="80dp"
           android:layout_height="80dp">
           <ImageView
               android:layout_width="22dp"
               android:layout_height="38dp"
               android:scaleType="centerCrop"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="30dp"
               android:src="@drawable/back_white"/>
       </FrameLayout>
       <TextView
           android:id="@+id/base_title_name"
           android:layout_width="225dp"
           android:layout_height="80dp"
           android:singleLine="true"
           android:gravity="center"
           android:layout_gravity="center_horizontal"
           android:textSize="34dp"
           android:textColor="#ffffff"/>
       <TextView
           android:id="@+id/title_share"
           android:layout_width="wrap_content"
           android:layout_height="80dp"
           android:singleLine="true"
           android:gravity="center"
           android:visibility="gone"
           android:layout_marginRight="30dp"
           android:layout_gravity="right"
           android:textSize="28dp"
           android:textColor="#ffffff"/>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginRight="30dp"
           android:layout_gravity="right|center_vertical"
           android:orientation="horizontal">
           <ImageView
               android:id="@+id/check_img"
               android:gravity="center"
               android:visibility="gone"
               android:layout_width="38dp"
               android:layout_height="38dp"/>
           <ImageView
               android:id="@+id/check_img2"
               android:gravity="center"
               android:visibility="gone"
               android:layout_width="38dp"
               android:layout_marginLeft="27dp"
               android:layout_height="38dp" />
       </LinearLayout>

    </FrameLayout>
    <View
        android:id="@+id/title_shadow"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"
        android:layout_below="@id/title_back" />

</RelativeLayout>
