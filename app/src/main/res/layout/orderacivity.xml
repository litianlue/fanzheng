<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#fff8d8">

        <ImageView
            android:id="@+id/local_right"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="73dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:src="@mipmap/settlement_warning" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/local_right"
            android:gravity="center_vertical"
            android:text="提货地址为小区团长地址,到货后请到该地自提"
            android:textColor="@color/ff36"
            android:textSize="@dimen/text_size_26" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="74dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/settlement_location"
                android:layout_width="28dp"
                android:layout_height="28dp" />
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <TextView
                    android:id="@+id/get_tv"
                    android:text="提货地址:"
                    android:textColor="@color/c666"
                    android:textSize="@dimen/text_size_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:lines="2"
                    android:text="广东省 白云区 白云大道 白云公园 绿地中心"
                    android:textColor="@color/c333"
                    android:textSize="@dimen/text_size_30"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <TextView
                    android:text="团长:"
                    android:textColor="@color/c666"
                    android:textSize="@dimen/text_size_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:lines="2"
                    android:text="张山  13800138000"
                    android:textColor="@color/c333"
                    android:textSize="@dimen/text_size_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="192dp">
        <ImageView
            android:src="@mipmap/girl"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="132dp"
            android:layout_height="132dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:lines="1"
                android:layout_marginTop="42dp"
                android:textSize="@dimen/text_size_26"
                android:textColor="@color/c333"
                android:text="这是什么东西这么好用"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="59dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:lines="1"
                    android:textSize="@dimen/text_size_30"
                    android:textColor="@color/ff36"
                    android:text="￥"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/price"
                    android:lines="1"
                    android:textSize="@dimen/text_size_30"
                    android:textColor="@color/ff36"
                    android:text="36.00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginRight="30dp"
                    android:gravity="right"
                    android:id="@+id/num"
                    android:lines="1"
                    android:textSize="@dimen/text_size_24"
                    android:textColor="@color/c999"
                    android:text="X1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <TextView
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textSize="@dimen/text_size_26"
        android:textColor="@color/c999"
        android:text="预留信息"
        android:layout_width="wrap_content"
        android:layout_height="70dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="70dp">
        <TextView
            android:text="姓名:"
            android:textColor="@color/c333"
            android:textSize="@dimen/text_size_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@null"
            android:layout_marginLeft="20dp"
            android:hint="请填写您的姓名"
            android:textColorHint="@color/c999"
            android:textColor="@color/c333"
            android:textSize="@dimen/text_size_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="70dp">
        <TextView
            android:text="手机:"
            android:textColor="@color/c333"
            android:textSize="@dimen/text_size_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@null"
            android:textColorHint="@color/c999"
            android:layout_marginLeft="20dp"
            android:hint="请填写您的手机"
            android:textColor="@color/c333"
            android:textSize="@dimen/text_size_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="220dp">
        <TextView
            android:layout_gravity="top"
            android:text="备注:"
            android:textColor="@color/c333"
            android:textSize="@dimen/text_size_30"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:gravity="top"
            android:background="@null"
            android:textColorHint="@color/c999"
            android:layout_marginLeft="20dp"
            android:hint="请填写您的姓名"
            android:textColor="@color/c333"
            android:textSize="@dimen/text_size_30"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:layout_marginLeft="241dp"
                android:text="实付:"
                android:textColor="@color/c333"
                android:textSize="@dimen/text_size_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="20dp"
                android:text="￥36.00"
                android:textColor="@color/g05ca"
                android:textSize="@dimen/text_size_36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/commit_order"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:background="@color/g05ca"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_36"
                android:text="提交订单"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>