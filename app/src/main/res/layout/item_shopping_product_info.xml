<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:minWidth="750dp"
    android:minHeight="150dp"
    android:layout_height="220dp"
    android:background="#dcdcdc"
    android:orientation="horizontal">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="100dp"
            android:background="@color/line"/>
        <RelativeLayout
            android:layout_marginLeft="100dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:singleLine="true"
                android:paddingTop="5dp"
                android:textColor="@color/c333"
                android:text="凡真店"/>
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_freight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:singleLine="true"
                android:paddingTop="5dp"
                android:textColor="@color/c333"
                android:text="免运费"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/fl_check"
                android:layout_width="100dp"
                android:minWidth="100dp"
                android:layout_height="match_parent">
                <CheckBox
                    android:id="@+id/cb_shopping"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:background="@drawable/shoppingcar_check_selector"
                    android:button="@null"/>
            </FrameLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:background="@drawable/c3_dot"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">
                <FrameLayout
                    android:id="@+id/fl_product_image"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:minWidth="130dp">
                    <ImageView
                        android:id="@+id/iv_shopping_product_image"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:background="@color/cf5"
                        android:src="@mipmap/girl" />
                    <TextView
                        android:id="@+id/tv_isdisplay"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:background="#90000000"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        android:textSize="26dp"
                        android:text="已下架"/>
                </FrameLayout>
                <LinearLayout
                    android:id="@+id/ll_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/fl_product_image"
                    android:paddingLeft="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_car_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"
                        android:singleLine="true"
                        android:paddingTop="5dp"
                        android:textColor="@color/c333"
                        android:text="切蔬果辅助器"/>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/tv_car_product_spce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="28dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/c999"
                        android:text="2cm/红色"/>
                    <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_product_image"
                        android:gravity="center_vertical"
                        android:layout_below="@+id/rl">
                        <TextView
                            android:id="@+id/tv_car_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="32dp"
                            android:lines="1"
                            android:textStyle="bold"
                            android:textColor="@color/c333"
                            android:text="¥ 6.90"/>
                        <TextView
                            android:id="@+id/tv_limit_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_car_price"
                            android:textSize="26dp"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/ea7b"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/tv_product_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingRight="5dp"
                            >
                            <TextView
                                android:id="@+id/remove"
                                android:textSize="@dimen/text_size_36"
                                android:textColor="@color/ed7d"
                                android:text="一"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                            <TextView
                                android:id="@+id/count"
                                android:textSize="@dimen/text_size_28"
                                android:textColor="@color/black"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:text="1"
                                android:background="#e0e0e0"
                                android:gravity="center"
                                android:layout_width="80dp"
                                android:layout_height="match_parent" />
                            <TextView
                                android:id="@+id/add"
                                android:textSize="@dimen/text_size_36"
                                android:textColor="@color/ed7d"
                                android:text="十"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/item_delete"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/ll_number"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="#88ff0000"
        android:gravity="center"
        android:text="删除"
        android:textColor="#ffffff"
        android:textSize="20sp" />
</LinearLayout>
