<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_details"
    android:layout_width="750dp"
    android:minWidth="750dp"
    android:minHeight="270dp"
    android:layout_height="270dp"
    android:background="@color/white"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/cf5f5"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-11-29"
            android:textSize="28dp"
            android:textColor="@color/c666"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="已完成"
            android:textSize="26dp"
            android:textColor="@color/g05ca"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:background="@color/cf5"
            android:src="@mipmap/girl" />
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_toRightOf="@+id/iv_product_image"
            android:paddingLeft="20dp">
            <TextView
                android:id="@+id/tv_order_product_name"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:textSize="26dp"
                android:singleLine="true"
                android:textColor="@color/c333"
                android:text="切蔬果辅助器切蔬果辅助器切蔬"/>
            <TextView
                android:id="@+id/tv_order_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="5dp"
                android:textSize="26dp"
                android:textColor="@color/c333"
                android:text="¥49.00"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingBottom="15dp"
            android:layout_toRightOf="@+id/iv_product_image"
            android:layout_below="@+id/rl"
            android:paddingLeft="20dp">
            <TextView
                android:id="@+id/tv_order_product_spec"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:textSize="26dp"
                android:lines="1"
                android:textColor="@color/c333"
                android:text="4cm/红色"/>
            <TextView
                android:id="@+id/tv_order_product_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="5dp"
                android:textSize="26dp"
                android:textColor="@color/c333"
                android:text="x1"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>

