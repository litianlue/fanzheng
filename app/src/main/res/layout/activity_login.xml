<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="750dp"
        android:layout_height="match_parent"
        android:src="@mipmap/login_default"
        android:scaleType="fitXY"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="83dp"
        android:visibility="gone"
        android:textColor="@color/c222"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="169dp"
        android:text="初家友品"/>
    <FrameLayout
        android:id="@+id/login"
        android:layout_width="640dp"
        android:layout_height="92dp"
        android:layout_marginBottom="283dp"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@color/c333">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="218dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/login_wx"
            />
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信登录"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginLeft="267dp"
            android:layout_gravity="center_vertical"/>
    </FrameLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_login_phone"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="191dp"
        android:text="手机登录"
        android:gravity="center"
        android:textColor="@color/c333"/>
    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:layout_marginBottom="102dp"
        android:layout_gravity="center_horizontal|bottom"/>
</FrameLayout>