<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="120dp">
        <FrameLayout
            android:layout_marginRight="10dp"
            android:background="@drawable/c6_dot"
            android:layout_width="11dp"
            android:layout_height="11dp"/>
        <FrameLayout
            android:layout_marginRight="30dp"
            android:background="@drawable/c_dot"
            android:layout_width="11dp"
            android:layout_height="11dp"/>
        <TextView
            android:layout_marginRight="30dp"
            android:textSize="@dimen/text_size_34"
            android:textColor="@color/c333"
            android:text="初家社区入住指南"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:layout_marginRight="10dp"
            android:background="@drawable/c_dot"
            android:layout_width="11dp"
            android:layout_height="11dp"/>
        <FrameLayout
            android:background="@drawable/c6_dot"
            android:layout_width="11dp"
            android:layout_height="11dp"/>
    </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <LinearLayout
            android:paddingVertical="10dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/c333"
                android:textSize="@dimen/text_size_24"
                android:text="初家社区团长免费加盟"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                android:textColor="@color/g05ca"
                android:textSize="@dimen/text_size_38"
                android:text="13800138000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/tel"
            android:gravity="center"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="260dp"
            android:background="@drawable/cc0_dot"
            android:layout_width="177dp"
            android:layout_height="62dp">
            <ImageView
                android:src="@mipmap/icon_tel"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/text_size_28"
                android:textColor="#f9f9f9"
                android:text="加盟"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>