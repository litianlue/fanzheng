<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="750dp"
                android:layout_height="750dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/img_position"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/c6_dot"
                    android:gravity="center"
                    android:text="2/3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_22" />
            </RelativeLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@mipmap/detail_bottom">
                <LinearLayout
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp">
                        <TextView
                            android:id="@+id/cptv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="团购价:¥ "
                            android:textColor="#ff3600"
                            android:textSize="@dimen/text_size_24" />

                        <TextView
                            android:id="@+id/community_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_toRightOf="@+id/cptv"
                            android:text="36.00"
                            android:textColor="#ff3600"
                            android:textSize="@dimen/text_size_38" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="344dp"
                            android:layout_marginRight="30dp"
                            android:text="限购结束时间"
                            android:textColor="@color/white"
                            android:textSize="22dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <TextView
                            android:id="@+id/ptv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="零售价:¥ "
                            android:textColor="@color/y4a1"
                            android:textSize="@dimen/text_size_20" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_toRightOf="@+id/ptv"
                            android:text="36.00"
                            android:textColor="@color/y4a1"
                            android:textSize="@dimen/text_size_30" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="344dp"
                            android:layout_marginRight="30dp"
                            android:text="2018.11.12 20:00:00"
                            android:textColor="#fff000"
                            android:textSize="@dimen/text_size_24" />

                    </RelativeLayout>
                </LinearLayout>
            </FrameLayout>
            <TextView
                android:padding="30dp"
                android:textSize="@dimen/text_size_30"
                android:lines="1"
                android:textColor="@color/c333"
                android:text="美国/新西兰进口奶粉"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="商品详情"
                android:textColor="@color/g05ca"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:text="一"
                android:textColor="@color/g05ca"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </WebView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <RelativeLayout
            android:id="@+id/go_home"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:layout_width="140dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="15dp"
                android:id="@+id/home_img"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/tab_icon_group_on"
                android:layout_width="40dp"
                android:layout_height="42dp" />
            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/home_img"
                android:textColor="@color/g05ca"
                android:text="首页"
                android:textSize="@dimen/text_size_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            
        </RelativeLayout>
        <TextView

            android:id="@+id/buy_tv"
            android:gravity="center"
            android:text="去结算"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_34"
            android:background="@color/g05ca"
            android:layout_width="610dp"
            android:layout_height="match_parent">
            
        </TextView>

    </LinearLayout>


</RelativeLayout>